<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body { font-family: 'Segoe UI', sans-serif; background-color: #f7f9fc; }
    .sidebar { width: 250px; height: 100vh; background-color: #343a40; position: fixed; color: #fff; }
    .sidebar h2 { padding: 20px; font-size: 20px; background-color: #212529; margin: 0; }
    .sidebar a { color: #adb5bd; display: block; padding: 15px 20px; text-decoration: none; }
    .sidebar a:hover, .sidebar a.active { background-color: #495057; color: #fff; }
    .main { margin-left: 250px; padding: 30px; }
    .card { border: none; border-radius: 10px; }
    .card h5 { font-weight: 600; }
    .stats-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; }

    #calendar {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
      gap: 3px;
    }
    .calendar-day {
      background: #fff;
      border: 1px solid #dee2e6;
      padding: 6px;
      text-align: center;
      border-radius: 4px;
      font-size: 12px;
    }
    .calendar-day.session {
      background-color: #0d6efd;
      color: #fff;
      font-weight: bold;
    }
    .calendar-day.blank {
      background: none;
      border: none;
    }
  </style>
</head>
<body>

<div class="sidebar">
  <h2>Admin Panel</h2>
  <a class="active" href="/admin/dashboard">Dashboard</a>
  <a href="#">Analytics</a>
  <a href="#">Reports</a>
  <a href="#">Settings</a>
  <a href="/admin/logout">Logout</a>
</div>

<div class="main">
  <h2 class="mb-4">Welcome, <%= admin.username %></h2>
  <div class="stats-grid">
    <div class="card p-4 shadow-sm">
      <h5>Total Participants</h5>
      <p class="fs-4"><%= totalParticipants %></p>
    </div>
    <div class="card p-4 shadow-sm">
      <h5>Gender Ratio</h5>
      <p>ðŸ‘¨ <%= maleCount %> | ðŸ‘© <%= femaleCount %></p>
    </div>
    <div class="card p-4 shadow-sm">
      <h5>Average Cost per Person</h5>
      <p class="fs-4">$<%= avgCost %></p>
    </div>
    <div class="card p-4 shadow-sm">
      <h5>Total Spent</h5>
      <p class="fs-4">$<%= totalSpent %></p>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-4 mb-4">
      <div class="card p-3 shadow-sm">
        <h5 class="mb-2">Top 10 Participants</h5>
        <ol class="mt-2 small">
          <% topParticipants.forEach(p => { %>
            <li><%= p.name %> - <%= p.count %> sessions</li>
          <% }) %>
        </ol>
      </div>
    </div>

    <div class="col-md-4 offset-md-4 mb-4">
      <div class="card p-3 shadow-sm">
        <h5 class="mb-2">Post-Events</h5>
        <select id="calendarMonth" class="form-select form-select-sm mb-2"></select>
        <div id="calendar"></div>
      </div>
    </div>
  </div>

  <div class="card p-4 shadow-sm">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h5 class="mb-0">Monthly Spend Trend</h5>
      <select id="chartMonth" class="form-select form-select-sm w-auto">
        <!-- Populated dynamically -->
      </select>
    </div>
    <canvas id="trendChart"></canvas>
  </div>
</div>

<script>
  const sessionDates = <%- JSON.stringify(sessionDates) %>;

  function buildCalendar(year, month) {
    const calendarContainer = document.getElementById("calendar");
    calendarContainer.innerHTML = "";
    const firstDay = new Date(year, month, 1).getDay();
    const daysInMonth = new Date(year, month + 1, 0).getDate();

    for (let i = 0; i < firstDay; i++) {
      const blank = document.createElement("div");
      blank.classList.add("calendar-day", "blank");
      calendarContainer.appendChild(blank);
    }

    for (let day = 1; day <= daysInMonth; day++) {
      const dateStr = year + '-' + String(month + 1).padStart(2, '0') + '-' + String(day).padStart(2, '0');
      const dayEl = document.createElement("div");
      dayEl.classList.add("calendar-day");
      if (sessionDates.includes(dateStr)) {
        dayEl.classList.add("session");
      }
      dayEl.textContent = day;
      calendarContainer.appendChild(dayEl);
    }
  }

  function populateMonthSelector(selectEl, callback) {
    const today = new Date();
    for (let i = 0; i < 12; i++) {
      const d = new Date(today.getFullYear(), today.getMonth() - i, 1);
      const option = document.createElement("option");
      option.value = d.getFullYear() + "-" + String(d.getMonth());
      option.textContent = d.toLocaleString('default', { month: 'long', year: 'numeric' });
      selectEl.appendChild(option);
    }
    selectEl.value = today.getFullYear() + "-" + today.getMonth();
    callback(today.getFullYear(), today.getMonth());

    selectEl.addEventListener("change", (e) => {
      const [y, m] = e.target.value.split("-").map(Number);
      callback(y, m);
    });
  }

  const calendarMonth = document.getElementById("calendarMonth");
  populateMonthSelector(calendarMonth, buildCalendar);

  const chartCtx = document.getElementById('trendChart').getContext('2d');
  const chart = new Chart(chartCtx, {
    type: 'bar',
    data: {
      labels: <%- JSON.stringify(chartLabels) %>,
      datasets: [{
        label: 'Total Spent ($)',
        data: <%- JSON.stringify(chartData) %>,
        backgroundColor: '#0d6efd'
      }]
    },
    options: {
      responsive: true,
      plugins: { legend: { display: false } }
    }
  });

  const chartMonthSelect = document.getElementById("chartMonth");
  populateMonthSelector(chartMonthSelect, (y, m) => {
    // NOTE: In a full app you'd make an API call here to fetch chart data
    console.log("Switch chart to:", y, m);
  });
</script>

</body>
</html>