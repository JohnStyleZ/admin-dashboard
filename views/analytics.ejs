<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Analytics</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body { font-family: 'Segoe UI', sans-serif; background-color: #f7f9fc; }
    .sidebar { width: 250px; height: 100vh; background-color: #343a40; position: fixed; color: #fff; }
    .sidebar h2 { padding: 20px; font-size: 20px; background-color: #212529; margin: 0; }
    .sidebar a { color: #adb5bd; display: block; padding: 15px 20px; text-decoration: none; }
    .sidebar a:hover, .sidebar a.active { background-color: #495057; color: #fff; }
    .main { margin-left: 250px; padding: 30px; }
    .card { border: none; border-radius: 10px; }
  </style>
</head>
<body>
<div class="sidebar">
  <h2>Admin Panel</h2>
  <a href="/admin/dashboard">Dashboard</a>
  <a href="/admin/analytics" class="<%= title === 'Analytics' ? 'active' : '' %>">Analytics</a>
  <a href="/admin/reports" class="<%= title === 'Reports' ? 'active' : '' %>">Reports</a>
  <a href="/admin/settings" class="<%= title === 'Settings' ? 'active' : '' %>">Settings</a>
  <a href="/admin/logout">Logout</a>
</div>

<div class="main p-4">
  <h2 class="mb-4">📊 Analytics</h2>
  <div class="row g-4">
    <div class="col-md-6">
      <div class="card p-3 shadow-sm">
        <h5>⏰ Peak Participation Hour</h5>
        <div style="height: 250px;"><canvas id="peakHourChart"></canvas></div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card p-3 shadow-sm">
        <h5>⏱️ Duration Distribution</h5>
        <div style="height: 250px;"><canvas id="durationChart"></canvas></div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card p-3 shadow-sm">
        <h5>👥 Group Size Categories</h5>
        <div style="height: 250px;"><canvas id="groupSizeChart"></canvas></div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card p-3 shadow-sm">
        <h5>👩‍🦰 Gender Participation Over Time</h5>
        <div style="height: 250px;"><canvas id="genderTrendChart"></canvas></div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card p-3 shadow-sm">
        <h5>📆 Sessions Per Month</h5>
        <div style="height: 250px;"><canvas id="sessionsMonthChart"></canvas></div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card p-3 shadow-sm">
        <h5>💰 Total Spending Per Month</h5>
        <div style="height: 250px;"><canvas id="spendingMonthChart"></canvas></div>
      </div>
    </div>
    <div class="col-md-12">
      <div class="card p-3 shadow-sm">
        <h5>👤 New vs Returning Participants</h5>
        <div style="height: 300px;"><canvas id="returnChart"></canvas></div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  const peakData = <%- JSON.stringify(peakHours) %>;
  const durationData = <%- JSON.stringify(durationBuckets) %>;
  const groupSizeData = <%- JSON.stringify(groupSizes) %>;
  const genderTrends = <%- JSON.stringify(genderTrends) %>;
  const returnData = <%- JSON.stringify(newVsReturning) %>;
  const sessionsPerMonth = <%- JSON.stringify(sessionsPerMonth) %>;
  const spendingPerMonth = <%- JSON.stringify(spendingPerMonth) %>;

  new Chart(document.getElementById('peakHourChart'), {
    type: 'bar',
    data: {
      labels: peakData.map(r => `${r.hour}:00`),
      datasets: [{ label: 'Participants', data: peakData.map(r => r.total), backgroundColor: '#0d6efd' }]
    }
  });

  new Chart(document.getElementById('durationChart'), {
    type: 'bar',
    data: {
      labels: durationData.map(r => `Bucket ${r.bucket}`),
      datasets: [{ label: 'People', data: durationData.map(r => r.total), backgroundColor: '#6f42c1' }]
    }
  });

  new Chart(document.getElementById('groupSizeChart'), {
    type: 'pie',
    data: {
      labels: groupSizeData.map(r => r.size_category),
      datasets: [{ data: groupSizeData.map(r => r.total_sessions), backgroundColor: ['#0d6efd', '#ffc107', '#dc3545'] }]
    }
  });

  const months = [...new Set(genderTrends.map(r => r.month))];
  const genders = ['Male', 'Female'];
  const trendData = genders.map(g => ({
    label: g,
    data: months.map(m => {
      const row = genderTrends.find(r => r.month === m && r.gender === g);
      return row ? row.total : 0;
    }),
    borderColor: g === 'Male' ? '#0d6efd' : '#e83e8c',
    fill: false
  }));

  new Chart(document.getElementById('genderTrendChart'), {
    type: 'line',
    data: { labels: months, datasets: trendData }
  });

  const returnMonths = [...new Set(returnData.map(r => r.month))];
  const types = ['New', 'Returning'];
  const returnDatasets = types.map(t => ({
    label: t,
    data: returnMonths.map(m => {
      const row = returnData.find(r => r.month === m && r.type === t);
      return row ? r.total : 0;
    }),
    backgroundColor: t === 'New' ? '#198754' : '#6c757d'
  }));

  new Chart(document.getElementById('returnChart'), {
    type: 'bar',
    data: { labels: returnMonths, datasets: returnDatasets },
    options: { responsive: true, scales: { x: { stacked: true }, y: { stacked: true } } }
  });

  new Chart(document.getElementById('sessionsMonthChart'), {
    type: 'bar',
    data: {
      labels: sessionsPerMonth.map(r => r.month),
      datasets: [{ label: 'Sessions', data: sessionsPerMonth.map(r => r.total_sessions), backgroundColor: '#0dcaf0' }]
    }
  });

  new Chart(document.getElementById('spendingMonthChart'), {
    type: 'bar',
    data: {
      labels: spendingPerMonth.map(r => r.month),
      datasets: [{ label: 'Total Spent ($)', data: spendingPerMonth.map(r => r.total_spent), backgroundColor: '#fd7e14' }]
    }
  });
</script>



</body>
</html>
