<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Analytics</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="main p-4">
    <h2 class="mb-4">ðŸ“Š Analytics</h2>
    <div class="row g-4">
      <div class="col-md-6">
        <div class="card p-3 shadow-sm">
          <h5>Total Sessions Per Month</h5>
          <canvas id="sessionsPerMonth"></canvas>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card p-3 shadow-sm">
          <h5>Average Group Size</h5>
          <canvas id="avgGroupSize"></canvas>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card p-3 shadow-sm">
          <h5>Gender Ratio</h5>
          <canvas id="genderRatioChart"></canvas>
        </div>
      </div>
    </div>
  </div>
  <script>
    const sessionCtx = document.getElementById('sessionsPerMonth');
    new Chart(sessionCtx, {
      type: 'bar',
      data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr'],
        datasets: [{
          label: 'Sessions',
          data: [5, 7, 4, 6],
          backgroundColor: '#0d6efd'
        }]
      }
    });

    const avgCtx = document.getElementById('avgGroupSize');
    new Chart(avgCtx, {
      type: 'line',
      data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr'],
        datasets: [{
          label: 'Avg Group Size',
          data: [6.5, 7.2, 5.9, 6.8],
          borderColor: '#198754',
          fill: false
        }]
      }
    });

    const genderCtx = document.getElementById('genderRatioChart');
    new Chart(genderCtx, {
      type: 'doughnut',
      data: {
        labels: ['Male', 'Female'],
        datasets: [{
          label: 'Gender Ratio',
          data: [20, 10],
          backgroundColor: ['#0d6efd', '#e83e8c']
        }]
      }
    });
  </script>
</body>
</html>