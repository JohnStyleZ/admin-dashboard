
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Analytics</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body { font-family: 'Segoe UI', sans-serif; background-color: #f7f9fc; }
    .sidebar {
      width: 250px; height: 100vh;
      background-color: #343a40;
      position: fixed; color: #fff;
    }
    .sidebar h2 {
      padding: 20px; font-size: 20px;
      background-color: #212529; margin: 0;
    }
    .sidebar a {
      color: #adb5bd; display: block;
      padding: 15px 20px; text-decoration: none;
    }
    .sidebar a:hover, .sidebar a.active {
      background-color: #495057; color: #fff;
    }
    .main {
      margin-left: 250px; padding: 30px;
    }
    .card { border: none; border-radius: 10px; }
  </style>
</head>
<body>
  <div class="sidebar">
    <h2>Admin Panel</h2>
    <a href="/admin/dashboard">Dashboard</a>
    <a href="/admin/analytics" class="<%= title === 'Analytics' ? 'active' : '' %>">Analytics</a>
    <a href="/admin/reports" class="<%= title === 'Reports' ? 'active' : '' %>">Reports</a>
    <a href="/admin/settings" class="<%= title === 'Settings' ? 'active' : '' %>">Settings</a>
    <a href="/admin/logout">Logout</a>
  </div>
  <div class="main">
    
<h2 class="mb-4">ðŸ“Š Analytics</h2>
<div class="row g-4">
  <div class="col-md-6">
    <div class="card p-3 shadow-sm">
      <h5>Total Sessions Per Month</h5>
      <canvas id="sessionsPerMonth"></canvas>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card p-3 shadow-sm">
      <h5>Average Group Size</h5>
      <canvas id="avgGroupSize"></canvas>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card p-3 shadow-sm">
      <h5>Gender Ratio</h5>
      <canvas id="genderRatioChart"></canvas>
    </div>
  </div>
</div>
<script>
const sessionCtx = document.getElementById('sessionsPerMonth');
new Chart(sessionCtx, {
  type: 'bar',
  data: {
    labels: ['Jan', 'Feb', 'Mar', 'Apr'],
    datasets: [{ label: 'Sessions', data: [5, 7, 4, 6], backgroundColor: '#0d6efd' }]
  }
});
const avgCtx = document.getElementById('avgGroupSize');
new Chart(avgCtx, {
  type: 'line',
  data: {
    labels: ['Jan', 'Feb', 'Mar', 'Apr'],
    datasets: [{ label: 'Avg Group Size', data: [6.5, 7.2, 5.9, 6.8], borderColor: '#198754', fill: false }]
  }
});
const genderCtx = document.getElementById('genderRatioChart');
new Chart(genderCtx, {
  type: 'doughnut',
  data: {
    labels: ['Male', 'Female'],
    datasets: [{ label: 'Gender Ratio', data: [20, 10], backgroundColor: ['#0d6efd', '#e83e8c'] }]
  }
});
</script>

  </div>
</body>
</html>
