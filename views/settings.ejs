<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Settings</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  <style>
    body { font-family: 'Segoe UI', sans-serif; background-color: #f7f9fc; }
    .sidebar { width: 250px; height: 100vh; background-color: #343a40; position: fixed; color: #fff; z-index: 100; }
    .sidebar h2 { padding: 20px; font-size: 20px; background-color: #212529; margin: 0; }
    .sidebar a { color: #adb5bd; display: block; padding: 15px 20px; text-decoration: none; }
    .sidebar a:hover, .sidebar a.active { background-color: #495057; color: #fff; }
    .sidebar a i { margin-right: 10px; }
    .main { margin-left: 250px; padding: 30px; }
    .card { border: none; border-radius: 10px; box-shadow: 0 4px 6px rgba(0,0,0,0.05); }
    .nav-tabs .nav-link { color: #495057; border-radius: 8px 8px 0 0; padding: 10px 20px; }
    .nav-tabs .nav-link.active { background-color: #fff; font-weight: bold; }
    .nav-tabs .nav-link i { margin-right: 8px; }
    .tab-content { background-color: #fff; border-radius: 0 8px 8px 8px; padding: 20px; box-shadow: 0 2px 8px rgba(0,0,0,0.05); }
    .search-box { max-width: 300px; }
    .table-responsive { overflow-x: auto; }
    .action-buttons .btn { margin-right: 5px; }
    .pagination { margin-bottom: 0; }
  </style>
</head>
<body>
<div class="sidebar">
  <h2><i class="bi bi-speedometer2"></i> Admin Panel</h2>
  <a href="/admin/dashboard"><i class="bi bi-house-door"></i> Dashboard</a>
  <a href="/admin/analytics"><i class="bi bi-bar-chart"></i> Analytics</a>
  <a href="/admin/reports"><i class="bi bi-file-text"></i> Reports</a>
  <a href="/admin/settings" class="active"><i class="bi bi-gear"></i> Settings</a>
  <a href="/admin/logout"><i class="bi bi-box-arrow-right"></i> Logout</a>
</div>

<div class="main p-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-gear"></i> Settings</h2>
    <div class="search-box input-group">
      <span class="input-group-text"><i class="bi bi-search"></i></span>
      <input type="text" class="form-control" id="settingsSearch" placeholder="Search settings...">
    </div>
  </div>

  <% if (message) { %>
    <div class="alert alert-info alert-dismissible fade show" role="alert">
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <!-- Tabs Navigation -->
  <ul class="nav nav-tabs mb-3" id="settingsTabs" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link <%= !req.query.tab || req.query.tab === 'profile' ? 'active' : '' %>" 
              id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" 
              type="button" role="tab" aria-selected="true">
        <i class="bi bi-person-circle"></i> Profile
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link <%= req.query.tab === 'participants' ? 'active' : '' %>" 
              id="participants-tab" data-bs-toggle="tab" data-bs-target="#participants" 
              type="button" role="tab" aria-selected="false">
        <i class="bi bi-people"></i> Participants
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link <%= req.query.tab === 'locations' ? 'active' : '' %>" 
              id="locations-tab" data-bs-toggle="tab" data-bs-target="#locations" 
              type="button" role="tab" aria-selected="false">
        <i class="bi bi-geo-alt"></i> Locations
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link <%= req.query.tab === 'rates' ? 'active' : '' %>" 
              id="rates-tab" data-bs-toggle="tab" data-bs-target="#rates" 
              type="button" role="tab" aria-selected="false">
        <i class="bi bi-cash-coin"></i> Rates
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link <%= req.query.tab === 'sessions' ? 'active' : '' %>" 
              id="sessions-tab" data-bs-toggle="tab" data-bs-target="#sessions" 
              type="button" role="tab" aria-selected="false">
        <i class="bi bi-calendar-event"></i> Sessions
      </button>
    </li>
  </ul>

  <!-- Tab Content -->
  <div class="tab-content" id="settingsTabContent">
    <!-- Profile Tab -->
    <div class="tab-pane fade <%= !req.query.tab || req.query.tab === 'profile' ? 'show active' : '' %>" 
         id="profile" role="tabpanel" aria-labelledby="profile-tab">
      <div class="row g-4">
        <div class="col-md-6">
          <div class="card p-4">
            <h5 class="mb-3"><i class="bi bi-person-circle"></i> Admin Profile</h5>
            <form action="/admin/settings/update-profile" method="POST">
              <div class="mb-3">
                <label class="form-label">Username</label>
                <input type="text" class="form-control" value="<%= admin.username %>" disabled>
              </div>
              <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" name="email" value="<%= admin.email %>">
              </div>
              <button type="submit" class="btn btn-primary">Update Email</button>
            </form>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card p-4">
            <h5 class="mb-3"><i class="bi bi-shield-lock"></i> Security</h5>
            <form action="/admin/settings/update-password" method="POST">
              <div class="mb-3">
                <label class="form-label">Current Password</label>
                <input type="password" class="form-control" name="current_password" required>
              </div>
              <div class="mb-3">
                <label class="form-label">New Password</label>
                <input type="password" class="form-control" name="new_password" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Confirm New Password</label>
                <input type="password" class="form-control" name="confirm_password" required>
              </div>
              <button type="submit" class="btn btn-warning">Change Password</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Participants Tab -->
    <div class="tab-pane fade <%= req.query.tab === 'participants' ? 'show active' : '' %>" 
         id="participants" role="tabpanel" aria-labelledby="participants-tab">
      <div class="d-flex justify-content-between mb-3">
        <h5><i class="bi bi-people"></i> Manage Participants</h5>
        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addParticipantModal">
          <i class="bi bi-person-plus"></i> Add Participant
        </button>
      </div>
      
      <div class="card">
        <div class="card-body p-0">
          <form action="/admin/settings/update-participants" method="POST">
            <div class="table-responsive">
              <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                  <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Email</th>
                    <th>Device ID</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% participants.forEach(p => { %>
                    <tr>
                      <td><%= p.participant_id %></td>
                      <td>
                        <input type="text" class="form-control form-control-sm" name="name_<%= p.participant_id %>" value="<%= p.name %>">
                      </td>
                      <td>
                        <select name="gender_<%= p.participant_id %>" class="form-select form-select-sm">
                          <option value="Male" <%= p.gender === 'Male' ? 'selected' : '' %>>Male</option>
                          <option value="Female" <%= p.gender === 'Female' ? 'selected' : '' %>>Female</option>
                          <option value="" <%= !p.gender ? 'selected' : '' %>>—</option>
                        </select>
                      </td>
                      <td>
                        <input type="email" class="form-control form-control-sm" name="email_<%= p.participant_id %>" value="<%= p.email || '' %>">
                      </td>
                      <td>
                        <input type="text" class="form-control form-control-sm" name="device_id_<%= p.participant_id %>" value="<%= p.device_id || '' %>" readonly>
                      </td>
                      <td class="action-buttons">
                        <button type="button" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#viewParticipantModal<%= p.participant_id %>">
                          <i class="bi bi-eye"></i>
                        </button>
                        <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteParticipantModal<%= p.participant_id %>">
                          <i class="bi bi-trash"></i>
                        </button>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
            <div class="p-3 d-flex justify-content-between align-items-center">
              <button type="submit" class="btn btn-success">Save Changes</button>
              <nav aria-label="Participant navigation">
                <ul class="pagination pagination-sm">
                  <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                  <li class="page-item active"><a class="page-link" href="#">1</a></li>
                  <li class="page-item"><a class="page-link" href="#">2</a></li>
                  <li class="page-item"><a class="page-link" href="#">3</a></li>
                  <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
              </nav>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Locations Tab -->
    <div class="tab-pane fade <%= req.query.tab === 'locations' ? 'show active' : '' %>" 
         id="locations" role="tabpanel" aria-labelledby="locations-tab">
      <div class="d-flex justify-content-between mb-3">
        <h5><i class="bi bi-geo-alt"></i> Manage Locations</h5>
        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addLocationModal">
          <i class="bi bi-plus-circle"></i> Add Location
        </button>
      </div>
      
      <div class="card">
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Sessions Count</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% locations.forEach(loc => { %>
                  <tr>
                    <td><%= loc.location_id %></td>
                    <td><%= loc.name %></td>
                    <td><span class="badge bg-info">0</span></td>
                    <td class="action-buttons">
                      <button type="button" class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editLocationModal<%= loc.location_id %>">
                        <i class="bi bi-pencil"></i>
                      </button>
                      <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteLocationModal<%= loc.location_id %>">
                        <i class="bi bi-trash"></i>
                      </button>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      
      <!-- Add Location Modal -->
      <div class="modal fade" id="addLocationModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Add New Location</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/admin/settings/add-location" method="POST">
              <div class="modal-body">
                <div class="mb-3">
                  <label for="locationName" class="form-label">Location Name</label>
                  <input type="text" class="form-control" id="locationName" name="name" required>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Add Location</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Rates Tab -->
    <div class="tab-pane fade <%= req.query.tab === 'rates' ? 'show active' : '' %>" 
         id="rates" role="tabpanel" aria-labelledby="rates-tab">
      <div class="card p-4">
        <h5 class="mb-3"><i class="bi bi-cash-coin"></i> Rate Settings</h5>
        
        <div class="mb-3">
          <label class="form-label">Select Location</label>
          <select class="form-select" onchange="window.location.href='/admin/settings?tab=rates&location_id=' + this.value">
            <% locations.forEach(loc => { %>
              <option value="<%= loc.location_id %>" <%= loc.location_id == selectedLocationId ? 'selected' : '' %>>
                <%= loc.name %>
              </option>
            <% }) %>
          </select>
        </div>

        <form action="/admin/settings/save-rates" method="POST">
          <input type="hidden" name="location_id" value="<%= selectedLocationId %>">

          <div class="table-responsive">
            <table class="table table-bordered">
              <thead class="table-light">
                <tr>
                  <th>Group Size</th>
                  <th>2PM–7PM Rate ($/hr)</th>
                  <th>After 7PM Rate ($/hr)</th>
                </tr>
              </thead>
              <tbody>
                <% const groupSizes = [
                  { min: 1, max: 3 },
                  { min: 4, max: 5 },
                  { min: 6, max: 8 },
                  { min: 9, max: 10 },
                  { min: 11, max: 15 },
                  { min: 16, max: 20 }
                ]; %>

                <% groupSizes.forEach(group => {
                  const rate = rates.find(r => r.group_min === group.min && r.group_max === group.max) || {};
                %>
                  <tr>
                    <td><%= group.min %>–<%= group.max %> people</td>
                    <td>
                      <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="number" step="0.01" name="day_<%= group.min %>_<%= group.max %>" class="form-control"
                               value="<%= rate.day_rate || '' %>" required />
                      </div>
                    </td>
                    <td>
                      <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="number" step="0.01" name="night_<%= group.min %>_<%= group.max %>" class="form-control"
                               value="<%= rate.night_rate || '' %>" required />
                      </div>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>

          <button type="submit" class="btn btn-success mt-3"><i class="bi bi-save"></i> Save Rates</button>
        </form>
      </div>
    </div>

    <!-- Sessions Tab -->
    <div class="tab-pane fade <%= req.query.tab === 'sessions' ? 'show active' : '' %>" 
         id="sessions" role="tabpanel" aria-labelledby="sessions-tab">
      <div class="d-flex justify-content-between mb-3">
        <h5><i class="bi bi-calendar-event"></i> Manage Sessions</h5>
        <div>
          <button class="btn btn-sm btn-primary me-2" data-bs-toggle="modal" data-bs-target="#createSessionModal">
            <i class="bi bi-plus-circle"></i> Create Session
          </button>
          <div class="btn-group btn-group-sm">
            <button class="btn btn-outline-secondary active">All</button>
            <button class="btn btn-outline-secondary">This Month</button>
            <button class="btn btn-outline-secondary">Last Month</button>
          </div>
        </div>
      </div>
      
      <div class="card mb-4">
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th>ID</th>
                  <th>Date & Time</th>
                  <th>Location</th>
                  <th>Room</th>
                  <th>Started By</th>
                  <th>Participants</th>
                  <th>Revenue</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (sessions && sessions.length > 0) { %>
                  <% sessions.forEach(session => { 
                    const sessionDate = new Date(session.start_time);
                  %>
                    <tr>
                      <td>#<%= session.session_id %></td>
                      <td><%= sessionDate.toLocaleDateString() %> <%= sessionDate.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></td>
                      <td><%= session.location_name || 'Unknown' %></td>
                      <td><%= session.room_number || '-' %></td>
                      <td><%= session.starter_name || '-' %></td>
                      <td><span class="badge bg-primary"><%= session.participant_count || 0 %></span></td>
                      <td>$<%= parseFloat(session.revenue || 0).toFixed(2) %></td>
                      <td class="action-buttons">
                        <button type="button" class="btn btn-sm btn-info view-session" data-session-id="<%= session.session_id %>">
                          <i class="bi bi-eye"></i>
                        </button>
                        <button type="button" class="btn btn-sm btn-warning edit-session" data-session-id="<%= session.session_id %>">
                          <i class="bi bi-pencil"></i>
                        </button>
                        <button type="button" class="btn btn-sm btn-danger delete-session" data-session-id="<%= session.session_id %>">
                          <i class="bi bi-trash"></i>
                        </button>
                      </td>
                    </tr>
                  <% }); %>
                <% } else { %>
                  <tr>
                    <td colspan="8" class="text-center py-4">No sessions found. Create your first session!</td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
          <div class="p-3 d-flex justify-content-end">
            <nav aria-label="Session navigation">
              <ul class="pagination pagination-sm">
                <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Add Participant Modal -->
<div class="modal fade" id="addParticipantModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add New Participant</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="/admin/settings/add-participant" method="POST">
        <div class="modal-body">
          <div class="mb-3">
            <label for="participantName" class="form-label">Name</label>
            <input type="text" class="form-control" id="participantName" name="name" required>
          </div>
          <div class="mb-3">
            <label for="participantGender" class="form-label">Gender</label>
            <select class="form-select" id="participantGender" name="gender">
              <option value="Male">Male</option>
              <option value="Female">Female</option>
              <option value="">Not Specified</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="participantEmail" class="form-label">Email (Optional)</label>
            <input type="email" class="form-control" id="participantEmail" name="email">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Add Participant</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Create Session Modal -->
<div class="modal fade" id="createSessionModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Create New Session</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="/admin/settings/create-session" method="POST">
        <div class="modal-body">
          <div class="mb-3">
            <label for="sessionDate" class="form-label">Date</label>
            <input type="date" class="form-control" id="sessionDate" name="date" required>
          </div>
          <div class="mb-3">
            <label for="sessionTime" class="form-label">Time</label>
            <input type="time" class="form-control" id="sessionTime" name="time" required>
          </div>
          <div class="mb-3">
            <label for="sessionLocation" class="form-label">Location</label>
            <select class="form-select" id="sessionLocation" name="location_id" required>
              <% locations.forEach(loc => { %>
                <option value="<%= loc.location_id %>"><%= loc.name %></option>
              <% }) %>
            </select>
          </div>
          <div class="mb-3">
            <label for="sessionRoom" class="form-label">Room Number</label>
            <input type="text" class="form-control" id="sessionRoom" name="room_number">
          </div>
          <div class="mb-3">
            <label for="startedById" class="form-label">Started By</label>
            <select class="form-select" id="startedById" name="started_by_id">
              <option value="">-- Select Participant --</option>
              <% participants.forEach(p => { %>
                <option value="<%= p.participant_id %>"><%= p.name %></option>
              <% }) %>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Create Session</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Location Edit Modals -->
<% locations.forEach(loc => { %>
  <!-- Edit Location Modal -->
  <div class="modal fade" id="editLocationModal<%= loc.location_id %>" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Edit Location</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="/admin/settings/update-location/<%= loc.location_id %>" method="POST">
          <div class="modal-body">
            <div class="mb-3">
              <label for="editLocationName<%= loc.location_id %>" class="form-label">Location Name</label>
              <input type="text" class="form-control" id="editLocationName<%= loc.location_id %>" name="name" value="<%= loc.name %>" required>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Save Changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Delete Location Modal -->
  <div class="modal fade" id="deleteLocationModal<%= loc.location_id %>" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Confirm Deletion</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete the location "<%= loc.name %>"?</p>
          <p class="text-danger"><strong>Warning:</strong> This action cannot be undone!</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <form action="/admin/settings/delete-location/<%= loc.location_id %>" method="POST">
            <button type="submit" class="btn btn-danger">Delete Location</button>
          </form>
        </div>
      </div>
    </div>
  </div>
<% }); %>

<!-- Participant View/Delete Modals -->
<% participants.forEach(p => { %>
  <!-- View Participant Modal -->
  <div class="modal fade" id="viewParticipantModal<%= p.participant_id %>" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Participant Details</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-md-6">
              <h6 class="fw-bold mb-3">Personal Information</h6>
              <p><strong>ID:</strong> <%= p.participant_id %></p>
              <p><strong>Name:</strong> <%= p.name %></p>
              <p><strong>Gender:</strong> <%= p.gender || 'Not specified' %></p>
              <p><strong>Email:</strong> <%= p.email || 'None' %></p>
              <p><strong>Device ID:</strong> <%= p.device_id || 'None' %></p>
            </div>
            <div class="col-md-6">
              <h6 class="fw-bold mb-3">Participation</h6>
              <p><strong>Total Sessions:</strong> <%= p.session_count || 0 %></p>
              <% if (p.last_session_date) { %>
                <p><strong>Last Session:</strong> <%= new Date(p.last_session_date).toLocaleDateString() %></p>
              <% } %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Delete Participant Modal -->
  <div class="modal fade" id="deleteParticipantModal<%= p.participant_id %>" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Confirm Deletion</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete participant "<%= p.name %>"?</p>
          <% if (p.session_count > 0) { %>
            <div class="alert alert-warning">
              <i class="bi bi-exclamation-triangle"></i> This participant has attended <%= p.session_count %> sessions. 
              Their data will be anonymized rather than fully deleted.
            </div>
          <% } else { %>
            <p class="text-danger"><strong>Warning:</strong> This action cannot be undone!</p>
          <% } %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <form action="/admin/settings/delete-participant/<%= p.participant_id %>" method="POST">
            <button type="submit" class="btn btn-danger">Delete Participant</button>
          </form>
        </div>
      </div>
    </div>
  </div>
<% }); %>

<!-- Session Modals -->
<% if (sessions && sessions.length > 0) { %>
  <% sessions.forEach(session => { 
    const sessionDate = new Date(session.start_time);
  %>
    <!-- View Session Modal -->
    <div class="modal fade" id="viewSessionModal<%= session.session_id %>" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Session Details</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="row mb-4">
              <div class="col-md-6">
                <h6 class="fw-bold mb-3">Session Information</h6>
                <p><strong>ID:</strong> #<%= session.session_id %></p>
                <p><strong>Date:</strong> <%= sessionDate.toLocaleDateString() %></p>
                <p><strong>Time:</strong> <%= sessionDate.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></p>
                <p><strong>Location:</strong> <%= session.location_name || 'Unknown' %></p>
                <p><strong>Room:</strong> <%= session.room_number || 'Not specified' %></p>
                <p><strong>Started By:</strong> <%= session.starter_name || 'Not recorded' %></p>
              </div>
              <div class="col-md-6">
                <h6 class="fw-bold mb-3">Participation</h6>
                <p><strong>Participants:</strong> <%= session.participant_count || 0 %></p>
                <p><strong>Revenue:</strong> $<%= parseFloat(session.revenue || 0).toFixed(2) %></p>
              </div>
            </div>
            
            <% if (session.participants && session.participants.length > 0) { %>
              <h6 class="fw-bold mb-3">Participant Details</h6>
              <div class="table-responsive">
                <table class="table table-sm">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Gender</th>
                      <th>Join Time</th>
                      <th>Leave Time</th>
                      <th>Revenue</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% session.participants.forEach(p => { %>
                      <tr>
                        <td><%= p.name %></td>
                        <td><%= p.gender || '-' %></td>
                        <td><%= p.join_time ? new Date(p.join_time).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) : '-' %></td>
                        <td><%= p.leave_time ? new Date(p.leave_time).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) : '-' %></td>
                        <td>$<%= parseFloat(p.adjusted_cost || 0).toFixed(2) %></td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <div class="alert alert-info">No participants in this session</div>
            <% } %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Edit Session Modal -->
    <div class="modal fade" id="editSessionModal<%= session.session_id %>" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Edit Session</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <form action="/admin/settings/update-session/<%= session.session_id %>" method="POST">
            <div class="modal-body">
              <div class="row">
                <div class="col-md-6">
                  <div class="mb-3">
                    <label for="editSessionDate<%= session.session_id %>" class="form-label">Date</label>
                    <input type="date" class="form-control" id="editSessionDate<%= session.session_id %>" name="date" 
                        value="<%= sessionDate.toISOString().split('T')[0] %>" required>
                  </div>
                  <div class="mb-3">
                    <label for="editSessionTime<%= session.session_id %>" class="form-label">Time</label>
                    <input type="time" class="form-control" id="editSessionTime<%= session.session_id %>" name="time" 
                        value="<%= sessionDate.toTimeString().split(' ')[0].substring(0, 5) %>" required>
                  </div>
                  <div class="mb-3">
                    <label for="editSessionLocation<%= session.session_id %>" class="form-label">Location</label>
                    <select class="form-select" id="editSessionLocation<%= session.session_id %>" name="location_id" required>
                      <% locations.forEach(loc => { %>
                        <option value="<%= loc.location_id %>" <%= loc.location_id == session.location_id ? 'selected' : '' %>>
                          <%= loc.name %>
                        </option>
                      <% }) %>
                    </select>
                  </div>
                  <div class="mb-3">
                    <label for="editSessionRoom<%= session.session_id %>" class="form-label">Room Number</label>
                    <input type="text" class="form-control" id="editSessionRoom<%= session.session_id %>" name="room_number" 
                        value="<%= session.room_number || '' %>">
                  </div>
                  <div class="mb-3">
                    <label for="editSessionStartedBy<%= session.session_id %>" class="form-label">Started By</label>
                    <select class="form-select" id="editSessionStartedBy<%= session.session_id %>" name="started_by_id">
                      <option value="">-- Select Participant --</option>
                      <% participants.forEach(p => { %>
                        <option value="<%= p.participant_id %>" <%= p.participant_id == session.started_by ? 'selected' : '' %>>
                          <%= p.name %>
                        </option>
                      <% }) %>
                    </select>
                  </div>
                </div>
                
                <div class="col-md-6">
                  <h6 class="mb-3">Participants</h6>
                  <% if (session.participants && session.participants.length > 0) { %>
                    <div class="accordion" id="participantAccordion<%= session.session_id %>">
                      <% session.participants.forEach((p, index) => { 
                        const joinTime = p.join_time ? new Date(p.join_time) : null;
                        const leaveTime = p.leave_time ? new Date(p.leave_time) : null;
                      %>
                        <div class="accordion-item">
                          <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" 
                                  data-bs-target="#participant<%= session.session_id %>_<%= p.participant_id %>">
                              <%= p.name %> - $<%= parseFloat(p.adjusted_cost || 0).toFixed(2) %>
                            </button>
                          </h2>
                          <div id="participant<%= session.session_id %>_<%= p.participant_id %>" class="accordion-collapse collapse" 
                              data-bs-parent="#participantAccordion<%= session.session_id %>">
                            <div class="accordion-body">
                              <div class="mb-2">
                                <label class="form-label small">Join Time</label>
                                <input type="datetime-local" class="form-control form-control-sm"
                                      name="participant_<%= p.participant_id %>_join_time"
                                      value="<%= joinTime ? joinTime.toISOString().slice(0, 16) : '' %>">
                              </div>
                              <div class="mb-2">
                                <label class="form-label small">Leave Time</label>
                                <input type="datetime-local" class="form-control form-control-sm"
                                      name="participant_<%= p.participant_id %>_leave_time"
                                      value="<%= leaveTime ? leaveTime.toISOString().slice(0, 16) : '' %>">
                              </div>
                              <div class="mb-2">
                                <label class="form-label small">Cost ($)</label>
                                <input type="number" step="0.01" class="form-control form-control-sm"
                                      name="participant_<%= p.participant_id %>_cost"
                                      value="<%= parseFloat(p.adjusted_cost || 0).toFixed(2) %>">
                              </div>
                              <button type="button" class="btn btn-sm btn-primary update-participant-btn" 
                                    data-session-id="<%= session.session_id %>"
                                    data-participant-id="<%= p.participant_id %>">
                                Update
                              </button>
                            </div>
                          </div>
                        </div>
                      <% }); %>
                    </div>
                  <% } else { %>
                    <div class="alert alert-info">No participants in this session</div>
                  <% } %>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Delete Session Modal -->
    <div class="modal fade" id="deleteSessionModal<%= session.session_id %>" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Confirm Deletion</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <p>Are you sure you want to delete session #<%= session.session_id %>?</p>
            <p>This will remove all participant data associated with this session.</p>
            <p class="text-danger"><strong>Warning:</strong> This action cannot be undone!</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <form action="/admin/settings/delete-session/<%= session.session_id %>" method="POST">
              <button type="submit" class="btn btn-danger">Delete Session</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  <% }); %>
<% } %>

<!-- Connect Quick Action Buttons -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
  // Auto-dismiss alerts after 4 seconds
  setTimeout(() => {
    const alert = document.querySelector('.alert');
    if (alert) {
      alert.classList.remove('show');
      alert.classList.add('fade');
      setTimeout(() => alert.remove(), 500);
    }
  }, 4000);

  // Enable tab navigation via URL
  document.addEventListener('DOMContentLoaded', function() {
    // Get tab from URL or activate first tab
    const urlParams = new URLSearchParams(window.location.search);
    const tabParam = urlParams.get('tab');
    
    if (tabParam) {
      const tabToActivate = document.querySelector(`#${tabParam}-tab`);
      if (tabToActivate) {
        new bootstrap.Tab(tabToActivate).show();
      }
    }
    
    // Check for stored modal to open (from dashboard)
    const modalToOpen = sessionStorage.getItem('openModal');
    if (modalToOpen) {
      setTimeout(() => {
        const modal = new bootstrap.Modal(document.getElementById(modalToOpen));
        if (modal) {
          modal.show();
        }
        sessionStorage.removeItem('openModal');
      }, 500);
    }
    
    // Update URL when tab changes
    const tabLinks = document.querySelectorAll('[data-bs-toggle="tab"]');
    tabLinks.forEach(tabLink => {
      tabLink.addEventListener('shown.bs.tab', function (event) {
        const tabId = event.target.id.replace('-tab', '');
        const newUrl = new URL(window.location);
        newUrl.searchParams.set('tab', tabId);
        history.pushState({}, '', newUrl);
      });
    });
    
    // Settings search functionality
    const searchInput = document.getElementById('settingsSearch');
    if (searchInput) {
      searchInput.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();
        filterSettingsContent(searchTerm);
      });
    }

    // Session action buttons
    document.querySelectorAll('.view-session').forEach(btn => {
      btn.addEventListener('click', function() {
        const sessionId = this.getAttribute('data-session-id');
        const modal = new bootstrap.Modal(document.getElementById(`viewSessionModal${sessionId}`));
        modal.show();
      });
    });
    
    document.querySelectorAll('.edit-session').forEach(btn => {
      btn.addEventListener('click', function() {
        const sessionId = this.getAttribute('data-session-id');
        const modal = new bootstrap.Modal(document.getElementById(`editSessionModal${sessionId}`));
        modal.show();
      });
    });
    
    document.querySelectorAll('.delete-session').forEach(btn => {
      btn.addEventListener('click', function() {
        const sessionId = this.getAttribute('data-session-id');
        const modal = new bootstrap.Modal(document.getElementById(`deleteSessionModal${sessionId}`));
        modal.show();
      });
    });
    
    // Participant update buttons
    document.querySelectorAll('.update-participant-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        const sessionId = this.getAttribute('data-session-id');
        const participantId = this.getAttribute('data-participant-id');
        
        const joinTimeInput = document.querySelector(`input[name="participant_${participantId}_join_time"]`);
        const leaveTimeInput = document.querySelector(`input[name="participant_${participantId}_leave_time"]`);
        const costInput = document.querySelector(`input[name="participant_${participantId}_cost"]`);
        
        const joinTime = joinTimeInput.value;
        const leaveTime = leaveTimeInput.value;
        const adjustedCost = costInput.value;
        
        // Create a temporary form to submit the data
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/admin/settings/update-session-participant/${sessionId}/${participantId}`;
        form.style.display = 'none';
        
        const joinTimeField = document.createElement('input');
        joinTimeField.name = 'join_time';
        joinTimeField.value = joinTime;
        form.appendChild(joinTimeField);
        
        const leaveTimeField = document.createElement('input');
        leaveTimeField.name = 'leave_time';
        leaveTimeField.value = leaveTime;
        form.appendChild(leaveTimeField);
        
        const costField = document.createElement('input');
        costField.name = 'adjusted_cost';
        costField.value = adjustedCost;
        form.appendChild(costField);
        
        document.body.appendChild(form);
        form.submit();
      });
    });
  });
  
  function filterSettingsContent(searchTerm) {
    if (!searchTerm) {
      // Reset visibility of all elements
      document.querySelectorAll('tr, .card').forEach(el => {
        el.style.display = '';
      });
      return;
    }
    
    // Filter table rows
    document.querySelectorAll('tbody tr').forEach(row => {
      const text = row.textContent.toLowerCase();
      row.style.display = text.includes(searchTerm) ? '' : 'none';
    });
    
    // Filter cards in profile tab
    document.querySelectorAll('#profile .card').forEach(card => {
      const text = card.textContent.toLowerCase();
      card.style.display = text.includes(searchTerm) ? '' : 'none';
    });
  }
</script>
</body>
</html>
