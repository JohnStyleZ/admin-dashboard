<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Settings</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <style>
    body { font-family: 'Segoe UI', sans-serif; background-color: #f7f9fc; }
    .sidebar { width: 250px; height: 100vh; background-color: #343a40; position: fixed; color: #fff; }
    .sidebar h2 { padding: 20px; font-size: 20px; background-color: #212529; margin: 0; }
    .sidebar a { color: #adb5bd; display: block; padding: 15px 20px; text-decoration: none; }
    .sidebar a:hover, .sidebar a.active { background-color: #495057; color: #fff; }
    .main { margin-left: 250px; padding: 30px; }
    .card { border: none; border-radius: 10px; }
  </style>
</head>
<body>
<div class="sidebar">
  <h2>Admin Panel</h2>
  <a href="/admin/dashboard">Dashboard</a>
  <a href="/admin/analytics" class="<%= title === 'Analytics' ? 'active' : '' %>">Analytics</a>
  <a href="/admin/reports" class="<%= title === 'Reports' ? 'active' : '' %>">Reports</a>
  <a href="/admin/settings" class="<%= title === 'Settings' ? 'active' : '' %>">Settings</a>
  <a href="/admin/logout">Logout</a>
</div>

<div class="main p-4">
  <h2 class="mb-4">‚öôÔ∏è Settings</h2>
  <div class="row g-4">

    <!-- Admin Profile -->
    <div class="col-md-6">
      <div class="card p-3 shadow-sm">
        <h5>üë§ Admin Profile</h5>
        <form action="/admin/settings/update-profile" method="POST">
          <div class="mb-2">
            <label class="form-label">Username</label>
            <input type="text" class="form-control" value="<%= admin.username %>" disabled>
          </div>
          <div class="mb-2">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" name="email" value="<%= admin.email %>">
          </div>
          <button type="submit" class="btn btn-primary">Update Email</button>
        </form>
        <hr>
        <form action="/admin/settings/update-password" method="POST">
          <h6>üîí Change Password</h6>
          <input type="password" class="form-control mb-2" name="current_password" placeholder="Current Password">
          <input type="password" class="form-control mb-2" name="new_password" placeholder="New Password">
          <button type="submit" class="btn btn-warning">Change Password</button>
        </form>
      </div>
    </div>

    <!-- Rate Settings with Location -->
    <div class="col-md-6">
      <div class="card p-3 shadow-sm">
        <h5 class="mb-2">üìâ Rate Settings</h5>
    
        <!-- Location selection uses GET -->
        <form method="GET" action="/admin/settings">
          <label class="form-label">Select Location</label>
          <select name="location_id" class="form-select mb-3" onchange="this.form.submit()">
            <% locations.forEach(loc => { %>
              <option value="<%= loc.location_id %>" <%= loc.location_id == selectedLocationId ? 'selected' : '' %>>
                <%= loc.name %>
              </option>
            <% }) %>
          </select>
        </form>
    
        <!-- Separate form for saving rates -->
        <form action="/admin/settings/save-rates" method="POST">
          <input type="hidden" name="location_id" value="<%= selectedLocationId %>">
    
          <div class="row fw-bold mb-2">
            <div class="col-4">Group Size</div>
            <div class="col-4">2PM‚Äì7PM Rate ($/hr)</div>
            <div class="col-4">After 7PM Rate ($/hr)</div>
          </div>
    
          <% const groupSizes = [
            { min: 1, max: 3 },
            { min: 4, max: 5 },
            { min: 6, max: 8 },
            { min: 9, max: 10 },
            { min: 11, max: 15 },
            { min: 16, max: 20 }
          ]; %>
    
          <% groupSizes.forEach(group => {
            const rate = rates.find(r => r.group_min === group.min && r.group_max === group.max) || {};
          %>
            <div class="row mb-2">
              <div class="col-4"><%= group.min %>‚Äì<%= group.max %> people</div>
              <div class="col-4">
                <input type="number" name="day_<%= group.min %>_<%= group.max %>" class="form-control"
                       value="<%= rate.day_rate || '' %>" required />
              </div>
              <div class="col-4">
                <input type="number" name="night_<%= group.min %>_<%= group.max %>" class="form-control"
                       value="<%= rate.night_rate || '' %>" required />
              </div>
            </div>
          <% }) %>
    
          <button type="submit" class="btn btn-success mt-3">Save Rates</button>
        </form>
      </div>
    
      <!-- Add Location -->
      <div class="card p-3 shadow-sm mt-3">
        <h5>üìç Add Location</h5>
        <form action="/admin/settings/add-location" method="POST">
          <input type="text" class="form-control mb-2" name="name" placeholder="New Location Name" required>
          <button type="submit" class="btn btn-secondary">Add Location</button>
        </form>
      </div>
    </div>

  </div>
</div>

</body>
</html>
