<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Settings</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body { font-family: 'Segoe UI', sans-serif; background-color: #f7f9fc; }
    .sidebar { width: 250px; height: 100vh; background-color: #343a40; position: fixed; color: #fff; }
    .sidebar h2 { padding: 20px; font-size: 20px; background-color: #212529; margin: 0; }
    .sidebar a { color: #adb5bd; display: block; padding: 15px 20px; text-decoration: none; }
    .sidebar a:hover, .sidebar a.active { background-color: #495057; color: #fff; }
    .main { margin-left: 250px; padding: 30px; }
    .card { border: none; border-radius: 10px; }
  </style>
</head>
<body>
<div class="sidebar">
  <h2>Admin Panel</h2>
  <a href="/admin/dashboard">Dashboard</a>
  <a href="/admin/analytics" class="<%= title === 'Analytics' ? 'active' : '' %>">Analytics</a>
  <a href="/admin/reports" class="<%= title === 'Reports' ? 'active' : '' %>">Reports</a>
  <a href="/admin/settings" class="<%= title === 'Settings' ? 'active' : '' %>">Settings</a>
  <a href="/admin/logout">Logout</a>
</div>

<div class="main p-4">
  <h2 class="mb-4">‚öôÔ∏è Settings</h2>

  <div class="row g-4">
    <!-- Admin Info -->
    <div class="col-md-6">
      <div class="card p-4 shadow-sm">
        <h5>üë§ Admin Profile</h5>
        <form action="/admin/settings/update-profile" method="POST">
          <div class="mb-3">
            <label class="form-label">Username</label>
            <input type="text" class="form-control" value="<%= admin.username %>" disabled>
          </div>
          <div class="mb-3">
            <label class="form-label">Email</label>
            <input name="email" type="email" class="form-control" value="<%= admin.email %>" required>
          </div>
          <button type="submit" class="btn btn-primary">Update Email</button>
        </form>

        <hr>

        <h6 class="mt-3">üîí Change Password</h6>
        <form action="/admin/settings/update-password" method="POST">
          <div class="mb-2">
            <input name="current_password" type="password" class="form-control" placeholder="Current Password" required>
          </div>
          <div class="mb-2">
            <input name="new_password" type="password" class="form-control" placeholder="New Password" required>
          </div>
          <button type="submit" class="btn btn-warning">Change Password</button>
        </form>
      </div>
    </div>

    <!-- Location Settings -->
    <div class="col-md-6">
      <div class="card p-4 shadow-sm mt-4">
        <h5>üíµ Rate Settings</h5>
        <form action="/admin/settings/update-rates" method="POST">
          <div class="table-responsive">
            <table class="table table-bordered align-middle text-center">
              <thead class="table-light">
                <tr>
                  <th>Group Size</th>
                  <th>2PM‚Äì7PM Rate ($/hr)</th>
                  <th>After 7PM Rate ($/hr)</th>
                </tr>
              </thead>
              <tbody>
                <% rateSettings.forEach((rate, i) => { %>
                  <tr>
                    <td><%= rate.range_label %></td>
                    <td>
                      <input type="number" step="1" name="day_<%= i %>" class="form-control" value="<%= rate.day_rate %>" required>
                    </td>
                    <td>
                      <input type="number" step="1" name="night_<%= i %>" class="form-control" value="<%= rate.night_rate %>" required>
                    </td>
                    <input type="hidden" name="range_<%= i %>" value="<%= rate.range_label %>">
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
          <input type="hidden" name="count" value="<%= rateSettings.length %>">
          <button class="btn btn-primary mt-3">Save Rates</button>
        </form>
      </div>

    </div>
  </div>
</div>

</body>
</html>
